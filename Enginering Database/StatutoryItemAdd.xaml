        <Label  Foreground="Red" Content="*" HorizontalContentAlignment="Left" HorizontalAlignment="Left" Margin="408,138,0,0" VerticalAlignment="Top" Height="27" Width="14"/>
        <Label  Foreground="Red" Content="*" HorizontalContentAlignment="Left" HorizontalAlignment="Left" Margin="408,170,0,0" VerticalAlignment="Top" Height="27" Width="14"/>
        <Label  Foreground="Red" Content="*" HorizontalContentAlignment="Left" HorizontalAlignment="Left" Margin="408,202,0,0" VerticalAlignment="Top" Height="27" Width="14"/>
        <Label  Foreground="Red" Content="* required" HorizontalContentAlignment="Left" HorizontalAlignment="Left" Margin="25,256,0,0" VerticalAlignment="Top" Height="27" Width="66"/>

