<Window x:Class="Engineering_Database.LoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Engineering_Database"
        mc:Ignorable="d"
        Title="Loading" Height="100" Width="470.538" ResizeMode="NoResize" HorizontalContentAlignment="Center">
    <Grid>

        <ProgressBar x:Name="ProgressBar" HorizontalAlignment="Center" Height="17" Margin="10,33,10,0" VerticalAlignment="Top" Width="370" Minimum="0" Maximum="100"/>
        <Label x:Name="contentLabel" Content="{Binding contentLabelText}" HorizontalAlignment="Left" Height="33" Margin="10,0,0,0" VerticalAlignment="Top" Width="445" HorizontalContentAlignment="Center"/>

    </Grid>
</Window>
