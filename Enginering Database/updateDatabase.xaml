                    <Label x:Name="CurrentDateLabel" Content="Current Date" HorizontalAlignment="Left" Margin="7,248,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.868,-0.692" Width="98" VerticalContentAlignment="Center"/>
