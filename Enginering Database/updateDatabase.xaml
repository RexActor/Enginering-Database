        </StackPanel>
        <ListView Name="OldEntriesListView" Height="122" Margin="10,0,12,0" VerticalAlignment="Top" Background="#FFFFF4F4" MouseDoubleClick="OldEntriesListView_MouseDoubleClick" BorderBrush="#FFF90B00" BorderThickness="2" Grid.RowSpan="2">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Job Number"  Width="100" DisplayMemberBinding="{Binding JobNumber}"/>
                    <GridViewColumn Header="Priority" Width="100" DisplayMemberBinding="{Binding Priority}"/>
                    <GridViewColumn Header="Reported Date" Width="100" DisplayMemberBinding="{Binding ReportedDate}"/>
                    <GridViewColumn Header="Detailed Description" Width="400" DisplayMemberBinding="{Binding DetailedDescription}"/>
                </GridView>
            </ListView.View>
            <ListView Height="100" Width="100">
                <ListView.View>
                    <GridView>
                        <GridViewColumn/>
                    </GridView>
                </ListView.View>
            </ListView>
        </ListView>

    </Grid>
</Window>
