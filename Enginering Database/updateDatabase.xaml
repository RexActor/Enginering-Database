                    <ComboBox x:Name="ContractorComboBoxData" IsEditable="True" IsReadOnly="True" Text="Please select" HorizontalAlignment="Left" Margin="115,443,0,0" VerticalAlignment="Top" Width="120"/>

                    <Label x:Name="AssignToLabel" Content="Assign To:" HorizontalAlignment="Left" Margin="10,388,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.868,-0.692" Width="108" VerticalContentAlignment="Center"/>
                    <ComboBox x:Name="AssignToDropDownBox"  IsEditable="True" IsReadOnly="True" Text="Please select" HorizontalAlignment="Left" Margin="115,390,0,0" VerticalAlignment="Top" Width="120"/>
